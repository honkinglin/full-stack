@model CinemaVM

@{
    ViewData["Title"] = "Update cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group text-center">
                        <img id="CinemaLogoPreview" src="@Model.ExistingLogo" class="border-info rounded-circle mr-2"
                            style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoFile" class="control-label">Cinema Logo</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" asp-for="LogoFile" accept="image/*" />
                            <label class="custom-file-label" for="ImageFile">Choose file</label>
                        </div>
                        <span asp-validation-for="LogoFile" class="text-danger"></span>
                        <small>Leave empty to keep the current image.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#LogoFile").on("change", function () {
                var output = document.getElementById('CinemaLogoPreview');
                if (this.files && this.files[0]) {
                    output.src = URL.createObjectURL(this.files[0]);
                }
            });
        });
    </script>
}